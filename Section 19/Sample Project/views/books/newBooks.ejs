<style>
    .newBooks-container {
  max-width: 400px;
  margin: 40px auto;
  padding: 25px;
  background: #e0941a;
  border-radius: 8px;
  box-shadow: 0 8px 24px rgba(0,0,0,0.08);
}

.newBooks-container h1 {
  text-align: center;
  margin-bottom: 20px;
}

.newBooks-container form {
  display: flex;
  flex-direction: column;
}

.newBooks-container label {
  font-weight: 600;
}

.newBooks-container input,
.newBooks-container textarea,
.newBooks-container select {
  padding: 10px;
  border-radius: 4px;
  border: 1px solid #ccc;
  font-size: 14px;
}

.newBooks-container textarea {
  resize: vertical;
  min-height: 80px;
}

.newBooks-container button {
  margin-top: 15px;
  padding: 12px;
  background: #4f46e5;
  color: #fff;
  border: none;
  border-radius: 5px;
  font-size: 16px;
  cursor: pointer;
}

.newBooks-container button:hover {
  background: #4338ca;
}
.newBooks-container div{
  display: flex;
  gap: 5px;
}
.newBooks-container form input,textarea{
    flex: 1;
}

</style>
<div class="newBooks-container">

    <h1>New Book</h1>
    <form action="/books/new" method="POST" enctype="multipart/form-data">
        <div>
            <label for="title">Title:</label>
            <input type="text" id="title" name="title" value="<%=book.title%>" required />
        </div>
        <br />
        <div>
            <label for="description">Description:</label>
            <textarea id="description" name="description" required><%=book.description%></textarea>
        </div>
        <br>
        <div>
            <label for="genre">Genre:</label>
            <input type="text" id="genre" name="genre" value="<%=book.genre%>" required />
        </div>
        <br>
        <div>
            <label for="rating">Rating:</label>
            <input type="number" value="<%=book.rating||""%>" id="rating" name="rating" required
                placeholder="Rating out of 5" min="1" max="5" />
        </div>
        <br>
        <div>
            <label for="publishDate">Publish Date:</label>
            <input type="date" id="publishDate" name="publishDate"
                value="<%=book.publishDate? new Date(books.publishDate).toISOString().split('T')[0] : ""%>" required />
        </div>

        <br>
        <div>
            <label for="author">Author:</label>
            <select name="author" id="author">
                <option value="" disabled selected>Select Author</option>
                <% authors.forEach(author=> { %>
                    <option value="<%= author._id %>" <%=book.author && book.author.toString()===author._id.toString()
                        ? 'selected' : '' %>>
                        <%= author.name %>
                    </option>
                    <% }) %>
            </select>
        </div>
        <br />
        <div>
            <label for="image">Image:</label>
            <input type="file" id="coverImage" name="coverImage" accept="image/*" required value="<%=book.coverImage%>" />
        </div>
        <br />
        <button type="submit">Add Book</button>
    </form>

</div>