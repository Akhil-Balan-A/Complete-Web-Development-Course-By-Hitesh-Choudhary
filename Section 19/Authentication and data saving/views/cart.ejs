<!DOCTYPE html>
<html>
<head>
  <title>Your Cart</title>
</head>
<body>
  <h2>Your Cart</h2>

  <% if (!cart || cart.length === 0) { %>
    <p>Your cart is empty</p>
  <% } else { %>
    <% cart.forEach(item => { %>
      <p>
        Product ID: <%= item.productId %> |
        Quantity: <%= item.quantity %>
      </p>
    <% }) %>
  <% } %>

  <a href="/products">Back to products</a>
</body>
</html>
