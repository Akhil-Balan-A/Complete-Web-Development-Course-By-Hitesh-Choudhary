<div class="allAuthors-container">
    <h1>All Authors</h1>
    <% if (authors.length === 0){%>
        <p>No Authors Found</p>
    <%}%>
    <div class="authors-list">

        <% authors.forEach(author => { %>
        <div class="author-card">
            <h3><%= author.name %></h3>
            <p>Rating: <%= author.rating %></p>
            <p>Bio: <%= author.bio %></p>
            <p>Nationality: <%= author.nationality %></p>
            <p>Date of Birth: <%= author.dob? new Date(author.dob).toISOString().split('T')[0] : "" %></p>
            <p>Email: <%= author.email %></p>
            <img src="<%= author.photo %>" alt="Author: Firstname Lastname">
        </div>
        <% }) %>

    </div>

</div>